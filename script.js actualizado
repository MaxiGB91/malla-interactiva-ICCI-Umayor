document.addEventListener('DOMContentLoaded', function() {
    const malla = [
        {
            semestre: 1,
            asignaturas: [
                { nombre: "Álgebra", estado: "pendiente", codigo: "MAT101" },
                { nombre: "Cálculo", estado: "pendiente", codigo: "MAT102" }
            ]
        },
        {
            semestre: 2,
            asignaturas: [
                { nombre: "Física", estado: "pendiente", codigo: "FIS101" },
                { nombre: "Programación", estado: "pendiente", codigo: "INF101" }
            ]
        }
    ];

    const contenedor = document.getElementById("malla");
    
    malla.forEach(sem => {
        const divSem = document.createElement("div");
        divSem.className = "semestre";
        divSem.innerHTML = `<h3>Semestre ${sem.semestre}</h3>`;
        
        sem.asignaturas.forEach(ramo => {
            const divRamo = document.createElement("div");
            divRamo.className = `ramo ${ramo.estado}`;
            divRamo.innerHTML = `${ramo.codigo}: ${ramo.nombre}`;
            divSem.appendChild(divRamo);
        });
        
        contenedor.appendChild(divSem);
    });
});
