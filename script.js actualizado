// script.js - Versión garantizada para mostrar los ramos
document.addEventListener('DOMContentLoaded', function() {
    const mallaEjemplo = [
        {
            semestre: 1,
            asignaturas: [
                { nombre: "Álgebra", estado: "pendiente", codigo: "MAT101" },
                { nombre: "Cálculo", estado: "pendiente", codigo: "MAT102" }
            ]
        },
        {
            semestre: 2,
            asignaturas: [
                { nombre: "Física", estado: "pendiente", codigo: "FIS101" },
                { nombre: "Programación", estado: "pendiente", codigo: "INF101" }
            ]
        }
    ];

    const contenedor = document.getElementById("malla");
    
    mallaEjemplo.forEach(semestre => {
        const divSemestre = document.createElement("div");
        divSemestre.className = "semestre";
        divSemestre.innerHTML = `<h3>Semestre ${semestre.semestre}</h3>`;
        
        semestre.asignaturas.forEach(ramo => {
            const divRamo = document.createElement("div");
            divRamo.className = `ramo ${ramo.estado}`;
            divRamo.textContent = `${ramo.codigo}: ${ramo.nombre}`;
            divSemestre.appendChild(divRamo);
        });
        
        contenedor.appendChild(divSemestre);
    });

    console.log("¡Los ramos deberían estar visibles ahora!"); // Verifica en la consola (F12)
});
